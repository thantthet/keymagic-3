{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeyMagic",
  "version": "0.0.0",
  "identifier": "net.keymagic.app",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "KeyMagic",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libwebkit2gtk-4.1-0",
          "libayatana-appindicator3-1"
        ]
      },
      "rpm": {
        "depends": [
          "gtk3",
          "webkit2gtk4.1",
          "libayatana-appindicator3"
        ]
      }
    }
  }
}